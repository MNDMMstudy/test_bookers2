<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2> User info</h2>
      <%= image_tag user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>

        </tbody>
      </table>
      <div class="row">

        <% if user == current_user %>
          <%= link_to "プロフィール編集", edit_user_path(user) %>
        <% else %>
          <%= link_to "マイページ", user_path(current_user.id) %>
        <% end %>
      </div>
    </div>

  </div>
  <h2 class ="title">New book</h2>
  <div class="row">
      <%= form_with model: book do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label></br>
          <%= f.text_field :title %>
        </div>

         <div class="form-group">
          <label for="book_option">Option</label></br>
          <%= f.text_field :body %>
        </div>

        <%= f.submit 'Create Book' %>

      <% end %>
    </div>
  </div>
</div>