
    <div class="col-md-3">
      <h2> User info</h2>
      <%= image_tag user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>

        </tbody>
      </table>
      <div class="btn btn-outline-secondary btn-block edit_user_29478">

        <% if user == current_user %>
          <%= link_to edit_user_path(user) do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% else %>
           <%= link_to user_path(current_user.id) do %>
             <i class="fas fa-user-cog"></i>
            <% end %>
        <% end %>
      </div>

  <h2 class ="title">New book</h2>
      <%= form_with model: book do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label></br>
          <%= f.text_field :title %>
        </div>

         <div class="form-group">
          <label for="book_option">Option</label></br>
          <%= f.text_field :body %>
        </div>

        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">

      <% end %>
  </div>