<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'list', user: @user, book: @book %>
    <div class="col-md-8 offset-mad-1">
      <% if flash[:notice] %>
       <p id="notice">
         <%= flash[:notice] %>
       </p>
      <% end %>

      <div>
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
           <tbody>
            <% @books.each do |book| %>
              <tr>
                <td> <%= image_tag @user.get_profile_image %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
         </table>
      </div>
    </div>
  </div>
</div>