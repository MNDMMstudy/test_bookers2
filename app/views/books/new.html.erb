<h2 class ="title">New book</h2>
  <%= form_with model: @book do |f| %>

    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

     <div class="form-group">
      <label for="book_option">Option</label>
      <%= f.text_field :body %>
    </div>

    <%= f.submit 'Create Book' %>

  <% end %>