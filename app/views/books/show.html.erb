<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>
<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td><%= image_tag @books.user.get_profile_image %></td>
              <td><%= link_to @books.title, book_path(@books.id) %></td>
              <td><%= @books.body %></td>
              <% if @books.user == current_user %>
                <td><%= link_to "Edit",edit_book_path(@books.id), class:"btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>