<h2>Book detail</h2>

<table>
  <tbody>
      <tr>
        <td></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
        <% if @book.user == current_user %>
         <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
  </tbody>
</table>