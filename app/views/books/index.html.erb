<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">

        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <h2>Books</h2>
        <table class=""table table-hover table-inverse"">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
           <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                    <%= link_to user_path(book.user.id)  do%>
                      <%= image_tag book.user.get_profile_image %>
                    <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>